doctype html
html
    head
        title= title
        link(rel="stylesheet" href="/css/style.css")
    body
        .container
            h1 Contact List
            
            .actions
                a(href="/update-contacts" class="add-link") Add to this table
            
            if error
                .error= error
            
            if contacts && contacts.length > 0
                table.custom-table
                    thead
                        tr
                            th First Name
                            th Last Name
                            th Email
                    tbody
                        each contact in contacts
                            tr
                                td= contact.properties.firstname || 'N/A'
                                td= contact.properties.lastname || 'N/A'
                                td= contact.properties.email || 'N/A'
            else
                .no-data
                    p No contacts found.
